# Routes
# This file defines all application routes (Higher priority routes first)
#
# Note: @controllers syntax signifies the actual controller instance, retrieved via GlobalSettings.getController().
# ~~~~

# Single endpoint for serving AngularJS
GET     /                           @controllers.Application.index
GET     /randomUUID                 @controllers.Application.randomUUID

# User management API
GET     /report                      @controllers.Reports.findUsers
POST    /report                       @controllers.Reports.createUser
PUT     /report/:date/:name  @controllers.Reports.updateUser(name: String, date: String)
DELETE  /report/:date/:name  @controllers.Reports.deleteReport(name: String, date: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
